<% include ../partials/header-2.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            دسته بندی
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">دسته بندی</a></li>
            <li class="active">ویرایش دسته بندی</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش دسته بندی</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action=<%=`/web/productCategory/${admin._id}/update`%> method="post" enctype="multipart/form-data">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="title">عنوان<span>*</span></label>
                                <input type="text" class="form-control" id="title" name="title" placeholder="عنوان" value="<%=admin.title%>">
                            </div>

                            <div class="form-group">
                                <label for="fileImage">تصویر دسته بندی<span>*</span></label>
                                <input type="file" class="form-control" id="fileImage" name="fileImage" required>
                            </div>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-left">ذخیره سازی تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- /.box -->

<!-- /.content-wrapper -->


