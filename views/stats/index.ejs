<% include ../partials/header.ejs %>

<!--add new stylesheets here-->
<!-- DataTables -->
<link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" href="/css/responsive.bootstrap.min.css">
