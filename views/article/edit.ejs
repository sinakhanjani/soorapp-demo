<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            مقاله
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">مقاله</a></li>
            <li class="active">ویرایش مقاله</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش مقاله - <%=admin.title%></h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action=<%=`/web/article/${admin._id}/update`%> method="post">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="fullName">متن<span>*</span></label>
                                <textarea id="body" name="body" style="width: 100%; height: 200px;"><%=admin.body%></textarea>
                            </div>

                            <!--<div class="form-group">-->
                                <!--<label for="password">رمز عبور<span>*</span></label>-->
                                <!--<input type="password" class="form-control" id="password" placeholder="رمز عبور" name="password" required>-->
                            <!--</div>-->

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-left">ذخیره سازی تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
