<% include ../partials/header-2.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            خدمت
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">خدمت</a></li>
            <li class="active">ویرایش خدمت</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش خدمت</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action=<%=`/web/product/${admin._id}/update`%> method="post" enctype="multipart/form-data">
                        <div class="box-body">
<!--
                        <div class="form-group">
                            <label for="fullName">نام و نام خانوادگی (فارسی)<span>*</span></label>
                            <input type="text" class="form-control" id="fullName" name="fullName" required="required" value="<%=admin.fullName%>">
                        </div> -->

                        <div class="form-group">
                            <label for="title">عنوان<span>*</span></label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="عنوان" value="<%=admin.title%>" required>
                        </div>

                        <div class="form-group">
                            <label for="description">توضیحات<span>*</span></label>
                            <input type="text" class="form-control" id="description" name="description" value="<%=admin.description%>" required>
                        </div>

                        <div class="form-group">
                            <label for="dateStart">تاریخ شروع<span>*</span></label>
                            <input type="text" minlength="10" maxlength="10" pattern="\d{4}/\d{2}/\d{2}" placeholder="1398/01/01" class="form-control" id="dateStart" name="dateStart" value="<%=admin.dateStart%>" required>
                        </div>

                        <div class="form-group">
                            <label for="dateEnd">تاریخ پایان<span>*</span></label>
                            <input type="text" minlength="10" maxlength="10" pattern="\d{4}/\d{2}/\d{2}" placeholder="1398/01/01" class="form-control" id="dateEnd" name="dateEnd" value="<%=admin.dateEnd%>" required>
                        </div>

                        <div class="form-group">
                            <label for="phone">تلفن<span></span></label>
                            <input type="text" class="form-control" id="phone" name="phone" value="<%=admin.phone%>">
                        </div>

                        <div class="form-group">
                            <label for="mobile">موبایل<span>*</span></label>
                            <input type="text" class="form-control" id="mobile" name="mobile" value="<%=admin.mobile%> required">
                        </div>

                        <div class="form-group">
                            <label for="instagram">اینستاگرام<span></span></label>
                            <input type="text" class="form-control" id="instagram" name="instagram" value="<%=admin.instagram%>">
                        </div>

                        <div class="form-group">
                            <label for="telegram">تلگرام<span></span></label>
                            <input type="text" class="form-control" id="telegram" name="telegram" value="<%=admin.telegram%>">
                        </div>

                        <div class="form-group">
                            <label for="site">سایت<span></span></label>
                            <input type="text" class="form-control" id="site" name="site" value="<%=admin.site%>">
                        </div>

                        <div class="form-group">
                            <label for="lat">Latitude<span></span></label>
                            <input type="text" class="form-control" id="lat" name="lat" value="<%=admin.lat%>">
                        </div>

                        <div class="form-group">
                            <label for="lng">Longitude<span></span></label>
                            <input type="text" class="form-control" id="lng" name="lng" value="<%=admin.lng%>">
                        </div>

                        <div class="form-group">
                            <label for="fileImage">تصویر<span>*</span></label>
                            <input type="file" class="form-control" id="fileImage" name="fileImage" required>
                        </div>

                        <div class="form-group">
                            <label for="fileVideo">ویدیو<span>*</span></label>
                            <input type="file" class="form-control" id="fileVideo" name="fileVideo" required>
                        </div>

                        <div class="form-group">
                            <label for="fileImages">سایر تصاویر<span>*</span></label>
                            <input type="file" multiple class="form-control" id="fileImages" name="fileImages" required>
                        </div>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-left">ذخیره سازی تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- /.box -->

<!-- /.content-wrapper -->


