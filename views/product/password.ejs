<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            مدیریت
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">مدیریت</a></li>
            <li class="active">تغییر رمز عبور</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش کارشناس</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action=<%=`/web/admin/changepassword`%> method="post">
                        <div class="box-body">

                            <div class="form-group">
                            <label for="oldPassword">رمز عبور قبلی<span>*</span></label>
                            <input type="password" class="form-control" id="oldPassword" placeholder="رمز عبور" name="old" required>
                            </div>

                            <div class="form-group">
                                <label for="newPassword">رمز عبور جدید<span>*</span></label>
                                <input type="password" class="form-control" id="newPassword" placeholder="رمز عبور" name="new" required>
                            </div>

                            <div class="form-group">
                                <label for="newPasswordRep">تکرار رمز عبور جدید<span>*</span></label>
                                <input type="password" class="form-control" id="newPasswordRep" placeholder="رمز عبور" name="newRep" required>
                            </div>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-left">ذخیره سازی تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
