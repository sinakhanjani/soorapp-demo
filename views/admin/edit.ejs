<% include ../partials/header-2.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            مدیریت
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">مدیریت</a></li>
            <li class="active">ویرایش کارشناس</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش کارشناس</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action=<%=`/web/admin/${admin._id}/update`%> method="post">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="fullName">نام و نام خانوادگی (فارسی)<span>*</span></label>
                                <input type="text" class="form-control" id="fullName" name="fullName" required="required" value="<%=admin.fullName%>">
                            </div>

                            <div class="form-group">
                                <label for="email">ایمیل<span>*</span></label>
                                <input type="email" class="form-control" id="email" name="email" required="required" value="<%=admin.email%>">
                            </div>

                            <!--<div class="form-group">-->
                                <!--<label for="password">رمز عبور<span>*</span></label>-->
                                <!--<input type="password" class="form-control" id="password" placeholder="رمز عبور" name="password" required>-->
                            <!--</div>-->

                            <% if(currentAdmin.isManager){ %>
                                <div class="form-group">
                                    <label>
                                    <% if(admin.isManager){ %>
                                        <input type="checkbox" id="isManager" name="isManager" class="minimal" checked>دسترسی مدیر (مدیریت کارشناسان)
                                    <% } else { %>
                                        <input type="checkbox" id="isManager" name="isManager" class="minimal">دسترسی مدیر (مدیریت کارشناسان)
                                    <% } %>
                                    </label>
                                </div>
                            <% } %>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-left">ذخیره سازی تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- /.box -->

<!-- /.content-wrapper -->


<% include ../partials/footer-2.ejs %>

