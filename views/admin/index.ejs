<% include ../partials/header-2.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- flash message -->
    <% include ../partials/flash.ejs %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            مدیریت
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">مدیریت</a></li>
            <li class="active">مشاهده کارشناسان</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">مشاهده کارشناسان</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>نام و نام خانوادگی</th>
                                    <th>ایمیل</th>
                                    <th>مدیر</th>
                                    <th>ویرایش</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% admins.forEach(admin => { %>
                                <tr>
                                    <td><%= admin.fullName %></td>
                                    <td><%= admin.email %></td>
                                    <td><%= (admin.isManager) ? 'بله' : 'خیر' %></td>
                                    <% if(currentAdmin.isManager) { %>
                                        <td>
                                            <a href=<%=`/web/admin/${admin._id}`%>><button class="btn btn-sm btn-warning">ویرایش</button></a>
                                            <form action=<%=`/web/admin/${admin._id}/delete`%> method="POST" style="display: inline-block">
                                                <button class="btn btn-sm btn-danger" type="submit">حذف</button>
                                            </form>
                                        </td>
                                    <% } else { %>
                                        <% if(currentAdmin.fullName === admin.fullName){ %>
                                            <td>
                                                <a href=<%=`/web/admin/${admin._id}`%>><button class="btn btn-sm btn-warning">ویرایش</button></a>
                                            </td>
                                        <% } else { %>
                                            <td></td>
                                        <% } %>
                                    <% } %>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

